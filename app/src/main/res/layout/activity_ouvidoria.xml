<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Amarelo"
    tools:context=".OuvidoriaActivity">

    <ImageButton
        android:id="@+id/buttonVoltarOuvidoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator"
        android:tint="@color/Vermelho"
        android:background="@null"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="OUVIDORIA"
        android:textColor="@color/Vermelho"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextOuvidoria"
        android:layout_width="@dimen/width_big_edittext"
        android:layout_height="@dimen/height_big_edittext"
        android:background="@drawable/edit_box_background"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50"
        android:textColor="@color/Vermelho"
        android:textCursorDrawable="@null"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" />

    <CheckBox
        android:id="@+id/checkBoxOuvidoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagem anÃ´nima"
        app:layout_constraintStart_toStartOf="@+id/editTextOuvidoria"
        app:layout_constraintTop_toBottomOf="@+id/editTextOuvidoria" />

    <Button
        android:id="@+id/buttonOuvidoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOuvidoria" />

    <TextView
        android:id="@+id/textErrorOuvidoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Vermelho"
        app:layout_constraintStart_toStartOf="@+id/checkBoxOuvidoria"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxOuvidoria" />


</androidx.constraintlayout.widget.ConstraintLayout>